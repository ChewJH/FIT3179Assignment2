{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Tourist Expenditure by Category",
    "data": {
        "url": "data/International Spending.csv"
    },
    "mark": {
        "type": "arc",
        "tooltip": true
